<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_connect"
            android:layout_weight="8"
            android:src="@drawable/gif_no_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/spo2_teaching"
            android:id="@+id/textView"
            android:layout_weight="16"
            android:textSize="28sp"
            android:gravity="center" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/next_step"
            android:id="@+id/button_login1"
            android:layout_weight="18"
            android:textSize="@dimen/text_size_title"
            android:textColor="@drawable/text_color_button"
            android:background="@drawable/bg_button_pressed"
            android:gravity="center|center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>
</RelativeLayout>
